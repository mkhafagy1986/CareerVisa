@using CareerVisa.Models
@using GridMvc.Html


@{
    ViewBag.DashBoardTitle = "Career Visa - Job Seeker Dashboard";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}

<!-- Page Heading -->
<!-- /.row -->

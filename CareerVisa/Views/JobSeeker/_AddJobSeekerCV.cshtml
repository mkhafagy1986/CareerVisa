@using CareerVisa.Models;
@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.EntityFramework;

@model CareerVisa.Models.DocumentViewModel


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title" id="myModalLabel">Add Career Field</h4>
</div>
<div>
    <br/>
    <h2 style="padding-left: 20px;">Please Select Curriculum vitae Document</h2><br/>
    @using (Html.BeginForm("AddJobSeekerCV", "JobSeeker", FormMethod.Post, new {@class = "form-horizontal", role = "form", enctype = "multipart/form-data"}))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <div class="form-group  wow fadeInDown animated">
                @Html.LabelFor(model => model.DocumentPath, htmlAttributes: new {@class = "col-lg-3 control-label"})
                <div class="col-md-7">
                    <input type="file" class="form-control" name="UploadCurriculumVitae" id="UploadCurriculumVitae">
                </div>
            </div>

            <div class="form-group  wow fadeInDown animated">
                @Html.LabelFor(model => model.DocumentDescription, htmlAttributes: new {@class = "col-lg-3 control-label"})
                <div class="col-md-7">
                    @Html.TextAreaFor(model => model.DocumentDescription, new {htmlAttributes = new {@class = "form-control", Required = "required"}})
                    <br/>
                    @Html.ValidationMessageFor(model => model.DocumentDescription, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" id="approve-btn" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
        <br/>
    }
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/scriptsdashboard")

<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>
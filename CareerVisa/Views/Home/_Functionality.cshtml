@model List<CareerVisa.Models.Functionality>

@{ int index = 0; }
@foreach (CareerVisa.Models.Functionality item in Model)
{
    index++;

    if ((index % 2) == 0)
    {
        <div id="feature-list-item-@item.FunctionalityId" class ="feature-list-item-bg">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h1 class="title-small wow fadeInLeft" data-wow-offset="10">@item.FunctionalityName</h1>
                        <h2 class="subtitle-small wow fadeInUp" data-wow-delay=".8s" data-wow-offset="10">
                            @item.FunctionalityDescription <br>
                            @Html.ActionLink("Read More", "FunctionalityDetails", "Home", new { FunctionalityId = item.FunctionalityId }, new { @class = "btn btn-default btn-lg" })
                        </h2>
                    </div>
                    <div class="col-md-6 wow fadeInRight" data-wow-delay=".5s" data-wow-offset="10">
                        <img class="pull-right" src="@item.FunctionalityImagePath">
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div id="feature-list-item-@item.FunctionalityId">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 wow fadeInLeft" data-wow-delay=".5s" data-wow-offset="10">
                        <img src="@item.FunctionalityImagePath">
                    </div>
                    <div class="col-md-6">
                        <h1 class="title-small wow fadeInRight" data-wow-offset="10">@item.FunctionalityName</h1>
                        <h2 class="subtitle-small wow fadeInUp" data-wow-delay=".8s" data-wow-offset="10">
                            @item.FunctionalityDescription <br>
                            @Html.ActionLink("Read More", "FunctionalityDetails", "Home", new { FunctionalityId = item.FunctionalityId }, new { @class = "btn btn-default btn-lg" })
                        </h2>
                    </div>
                </div>
            </div>
        </div>
    }

}

@model List<CareerVisa.Models.Feature>

@section DefaultcssBundle{
    @Styles.Render("~/Content/css")
}

<div class="container text-center">
    <div class="row">
        <h1 class="title-small wow tada FeaturesHeaderh1h2">Why Career Visa?</h1>
        <h2 class="subtitle-small wow fadeInLeft FeaturesHeaderh1h2" data-wow-delay=".5s">Career Visa Platform Features</h2>

        @foreach (CareerVisa.Models.Feature item in Model)
            {
            <div class="col-lg-@Math.Floor(double.Parse((12/Model.Count).ToString())) col-md-@Math.Floor(double.Parse((12/Model.Count).ToString())) col-sm-@Math.Floor(double.Parse((12/Model.Count).ToString()))    col-xs-12 wow fadeInUp" data-wow-delay=".5s">
                <div class="feature-item">
                    <i class="@item.FeatureIconName"></i>
                    <h3>@item.FeatureName</h3>
                    <p>@item.FeatureDescribtion</p>
                </div>
            </div>
        }
    </div>
</div>
@section DefaultscriptBundle{
    @Scripts.Render("~/bundles/scripts")
}

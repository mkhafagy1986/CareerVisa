<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Career Visa</title>

    <!-- jQuery Load -->
    <script src="~/Scripts/jquery-min.js"></script>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
          <![endif]-->

    <!-- Favicon and touch icons -->
    @*<link rel="shortcut icon" href="assets/ico/favicon.png">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="assets/ico/apple-touch-icon-57-precomposed.png">*@

    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
    @RenderSection("DefaultcssBundle", required: false)
    @RenderSection("RegistrationcssBundle", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <!-- Nav Menu Section -->
    <div class="logo-menu">
        <nav class="navbar navbar-default">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header col-md-3">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="@Url.Action("Index", "Home")" class = "navbar-brand fa fa-fa fa-cubes">Career Visa</a>
                    @*@Html.ActionLink("Career Visa", "Index", "Home", new { @class = "navbar-brand fa fa-fa fa-cubes" })*@
                </div>

                @Html.Partial("_menu");
            </div>
        </nav>
    </div>
    <!-- Nav Menu Section End -->
    <div style="min-height:410px !important;">
        @RenderBody()
    </div>
    <!-- Footer Section Start -->
    <section id="bottom">
        <div class="container">
            @Html.Partial("_footer")
        </div>
    </section>
    <!-- Footer Section End -->
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("DefaultscriptBundle", required: false)
    @RenderSection("RegistrationscriptBundle", required: false)
    @RenderSection("scripts", required: false)

<div class="modal"><!-- Place at bottom of page --></div>
<script type="text/javascript">
    $body = $("body");

    $(document).on({
        ajaxStart: function () { $body.addClass("loading"); },
        ajaxStop: function () { $body.removeClass("loading"); }
    });
</script>
</body>
</html>
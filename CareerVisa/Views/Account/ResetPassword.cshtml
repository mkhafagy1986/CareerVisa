@model CareerVisa.Models.ResetPasswordViewModel
@section RegistrationcssBundle{
    @Styles.Render("~/Content/cssRegistration")
}
@{
    ViewBag.Title = "Reset password";
}

<!-- Top content -->
<div class="top-content">

    <div class="inner-bg">
        <div class="container">

            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1>Reset your password</h1>
                </div>
            </div>
            <div class="row">
                @Html.ValidationSummary("", new { @class = "alert alert-info alert-dismissable", style = "text-align:left !important;" })
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">

                    <div class="form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>Reset your password.</h3>
                                <p>Enter username and password to reset your password:</p>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-edit"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "login-form", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(model => model.Code)
                                <div class="form-group  wow fadeInDown animated">
                                    <label class="sr-only" for="form-username">Email</label>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-email form-control", id = "username", placeholder = "Email..." })
                                    @Html.ValidationMessageFor(m => m.Email, "")
                                </div>
                                <div class="form-group  wow fadeInDown animated">
                                    <label class="sr-only" for="form-password">Password</label>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-password form-control", id = "password", placeholder = "Password..." })
                                    @Html.ValidationMessageFor(m => m.Password, "")
                                </div>
                                <div class="form-group  wow fadeInDown animated">
                                    <label class="sr-only" for="form-password">Password</label>
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-password form-control", id = "password", placeholder = "Confirm Password..." })
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "")
                                </div>

                                <button type="submit" class="btn wow fadeInUp" data-wow-delay=" 1s">Reset</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- Footer -->
<footer>
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
                <div class="footer-border"></div>
                <p>
                    Made by Anli Zaimi at <a href="http://azmind.com" target="_blank"><strong>AZMIND</strong></a>
                    having a lot of fun. <i class="fa fa-smile-o"></i>
                </p>
            </div>

        </div>
    </div>
</footer>


@section DefaultscriptBundle{
    @Scripts.Render("~/bundles/scriptsRegistration")
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

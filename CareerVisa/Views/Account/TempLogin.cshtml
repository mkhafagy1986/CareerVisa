@using CareerVisa.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<section id="sign-in-area">

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="title-big wow fadeIn"><i class="fa fa-sign-in"></i></h1>
                <h2 class="subtitle-big">Sign-in to access your account</h2>
            </div>


            <div class="col-md-12 text-center">

                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "sign-in-form", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger subtitle-small" })
                    <div class="form-group col-md-offset-4 col-md-4 col-md-offset-4 wow fadeInDown">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "signinemail", placeholder = "Enter email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        @*<input type="email" class="form-control" id="signinemail" placeholder="Enter email">*@
                    </div>
                    <div class="form-group col-md-offset-4 col-md-4 col-md-offset-4 wow fadeInDown" data-wow-delay=".7s">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "signinpassword", placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        @*<input type="password" class="form-control" id="signinpassword" placeholder="Password">*@

                        <input type="submit" value="Sign In" class="sign-up-button btn btn-border btn-lg col-md-offset-3 col-md-6 col-md-offset-3 wow fadeInUp" data-wow-delay="1s" />
                    </div>
                    @*<div class="form-group col-md-offset-4 col-md-4 col-md-offset-4 wow fadeInDown" data-wow-delay=".7s">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-control", id = "signinrememberme", placeholder = "RememberMe" })
                            @Html.LabelFor(m => m.RememberMe)
                        </div>

                    </div>*@
                }
            </div>
        </div>
    </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
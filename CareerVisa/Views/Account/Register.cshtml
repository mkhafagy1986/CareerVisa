@model CareerVisa.Models.RegisterationViewModel
@section RegistrationcssBundle{
    @Styles.Render("~/Content/cssRegistration")
}
<!-- Top content -->
<div class="top-content">

    <div class="inner-bg">
        <div class="container">

            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1><strong>Bootstrap</strong> Login &amp; Register Forms</h1>
                    <div class="description">
                        <p>
                            This is a free responsive <strong>"login and register forms"</strong> template made with Bootstrap.
                            Download it on <a href="http://azmind.com" target="_blank"><strong>AZMIND</strong></a>,
                            customize and use it as you like!
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                @Html.ValidationSummary("", new { @class = "alert alert-info alert-dismissable", style = "text-align:left !important;" })
            </div>
            <div class="row">
                <div class="col-sm-5">

                    <div class="form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>Employer Registration</h3>
                                <p>Enter your information as an employeer:</p>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-briefcase"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            @*<form role="form" action="" method="post" class="login-form">*@
                            @using (Html.BeginForm("RegisterEmployer", "Account", FormMethod.Post, new { @class = "login-form", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group wow fadeInDown animated">
                                    <label class="sr-only" for="form-first-name">Company Name</label>
                                    @Html.TextBoxFor(m => m.Employer.Name, new { @class = "form-first-name form-control", id = "employername", placeholder = "Employer name...", required = "required" })
                                    @Html.ValidationMessageFor(m => m.Employer.Name, "", new { @class = "text-danger", style = "color:#fff" })
                                    @*<input type="text" name="companyname" required="required" placeholder="Employer name..." class="form-first-name form-control" id="form-company-first-name">*@
                                </div>
                                <div class="form-group wow fadeInDown animated">
                                    <label class="sr-only" for="form-email">Company Email</label>
                                    @Html.TextBoxFor(m => m.Employer.Email, new { @class = "form-email form-control", id = "employeremail", placeholder = "Employer Email...", required = "required", data_Validation = "email" })
                                    @Html.ValidationMessageFor(m => m.Employer.Email, "", new { @class = "text-danger", style = "color:#fff" })

                                    @*<input type="text" name="companyemail" data-validation="email" placeholder="Employer Email..." class="form-company-email form-control" id="form-company-email">*@
                                </div>
                                <div class="form-group wow fadeInDown animated">
                                    <label class="sr-only" for="form-password">Enter Password</label>
                                    @Html.PasswordFor(m => m.Employer.Password, new { @class = "form-password form-control", id = "employerpassword", placeholder = "Enter Password", required = "required" })
                                    @Html.ValidationMessageFor(m => m.Employer.Password, "", new { @class = "text-danger", style = "color:#fff" })
                                    @*<input type="password" name="companypassword" placeholder="Enter Password" class="form-password form-control" id="form-company-password">*@

                                </div>
                                <div class="form-group wow fadeInDown animated">
                                    <label class="sr-only" for="form-password">Confirm Password</label>
                                    @Html.PasswordFor(m => m.Employer.ConfirmPassword, new { @class = "form-password form-control", id = "employerconfirmpassword", placeholder = "Confirm Password", required = "required", data_validate_linked = "companypassword" })
                                    @Html.ValidationMessageFor(m => m.Employer.ConfirmPassword, "", new { @class = "text-danger", style = "color:#fff" })
                                    @*<input type="password" name="companyConfirmpassword" data-validate-linked="companypassword" placeholder="Confirm Password" class="form-password form-control" id="form-company-Confirmpassword">*@
                                </div>
                                    <div class="form-group wow fadeInDown animated">
                                        <label class="sr-only" for="form-phone">Company Phone</label>
                                        @Html.TextBoxFor(m => m.Employer.PhoneNumber, new { @class = "form-phone form-control", id = "employerphonenumber", placeholder = "Phone Number", required = "required" })
                                        @Html.ValidationMessageFor(m => m.Employer.PhoneNumber, "", new { @class = "text-danger", style = "color:#fff" })
                                        @*<input type="text" name="company-phone" placeholder="Phone Number" class="form-phone form-control" id="form-company-phone   ">*@
                                    </div>
                                    <button type="submit" class="btn  wow fadeInUp" data-wow-delay="1s">Register Employeer</button>
                            }
                            @*</form>*@
                        </div>
                    </div>


                </div>

                <div class="col-sm-1 middle-border"></div>
                <div class="col-sm-1"></div>

                <div class="col-sm-5">

                    <div class="form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>Job Seeker Registration</h3>
                                <p>Enter your information as a job seeker</p>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-graduation-cap"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            @*<form role="form" action="" method="post" class="registration-form">*@
                            @using (Html.BeginForm("RegisterJobseeker", "Account", FormMethod.Post, new { @class = "login-form", role = "form" }))
            {
                                @Html.AntiForgeryToken()
                                <div class="form-group wow fadeInDown animated">
                                    <label class="sr-only" for="form-first-name">First name</label>
                                    @Html.TextBoxFor(m => m.JobSeeker.FirstName, new { @class = "form-first-name form-control", id = "jobseekerfirstname", placeholder = "First name...", required = "required" })
                                    @Html.ValidationMessageFor(m => m.JobSeeker.FirstName, "", new { @class = "text-danger", style = "color:#fff" })
                                    @*<input type="text" name="form-first-name" placeholder="First name..." class="form-first-name form-control" id="form-first-name">*@
                                </div>
                                <div class="form-group wow fadeInDown animated">
                                    <label class="sr-only" for="form-last-name">Last name</label>
                                    @Html.TextBoxFor(m => m.JobSeeker.LastName, new { @class = "form-first-name form-control", id = "jobseekerlastname", placeholder = "Last name...", required = "required" })
                                    @Html.ValidationMessageFor(m => m.JobSeeker.LastName, "", new { @class = "text-danger", style = "color:#fff" })
                                    @*<input type="text" name="form-last-name" placeholder="Last name..." class="form-last-name form-control" id="form-last-name">*@
                                </div>
                                <div class="form-group wow fadeInDown animated">
                                    <label class="sr-only" for="form-email">Email</label>
                                    @Html.TextBoxFor(m => m.JobSeeker.Email, new { @class = "form-email form-control", id = "jobseekeremailname", placeholder = "Email...", required = "required" })
                                    @Html.ValidationMessageFor(m => m.JobSeeker.Email, "", new { @class = "text-danger", style = "color:#fff" })
                                    @*<input type="text" name="form-email" placeholder="Email..." class="form-email form-control" id="form-email">*@
                                </div>
                                <div class="form-group wow fadeInDown animated">
                                    <label class="sr-only" for="form-password">Enter Password</label>
                                    @Html.PasswordFor(m => m.JobSeeker.Password, new { @class = "form-password form-control", id = "jobseekerpasswordname", placeholder = "Enter Password", required = "required" })
                                    @Html.ValidationMessageFor(m => m.JobSeeker.Password, "", new { @class = "text-danger", style = "color:#fff" })
                                    @*<input type="password" name="password" placeholder="Enter Password" class="form-password form-control" id="form-password">*@

                                </div>
                                <div class="form-group wow fadeInDown animated">
                                    <label class="sr-only" for="form-Password">Confirm Password</label>
                                    @Html.PasswordFor(m => m.JobSeeker.ConfirmPassword, new { @class = "form-password form-control", id = "jobseekerconfirmpasswordname", placeholder = "Confirm Password", required = "required", data_validate_linked = "companypassword" })
                                    @Html.ValidationMessageFor(m => m.JobSeeker.ConfirmPassword, "", new { @class = "text-danger", style = "color:#fff" })
                                    @*<input type="password" name="Confirmpassword" placeholder="Confirm Password" class="form-password form-control" id="form-Confirmpassword">*@
                                </div>
                                <div class="form-group wow fadeInDown animated">
                                    <label class="sr-only" for="form-phone">Phone Number</label>
                                    @Html.TextBoxFor(m => m.JobSeeker.PhoneNumber, new { @class = "form-phone form-control", id = "jobseekerphonenumber", placeholder = "Phone Number", required = "required" })
                                    @Html.ValidationMessageFor(m => m.JobSeeker.PhoneNumber, "", new { @class = "text-danger", style = "color:#fff" })
                                    @*<input type="text" name="phone" placeholder="Phone Number" class="form-phone form-control" id="form-phone   ">*@
                                </div>
                                <button type="submit" class="btn wow fadeInUp" data-wow-delay="1s">Register job seeker</button>
                            }
                            @*</form>*@
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>

</div>
<!-- Footer -->
<footer>
    <div class="container">
        <div class="row">

            <div class="col-sm-8 col-sm-offset-2">
                <div class="footer-border"></div>
                <p>
                    Made by Anli Zaimi at <a href="http://azmind.com" target="_blank"><strong>AZMIND</strong></a>
                    having a lot of fun. <i class="fa fa-smile-o"></i>
                </p>
            </div>

        </div>
    </div>
</footer>

@section DefaultscriptBundle{
    @Scripts.Render("~/bundles/scriptsRegistration")
}